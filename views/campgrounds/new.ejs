<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" class="validated-form" method="POST" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">
                    Seems good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" .class="mb-3" type="text" name="campground[location]" id="location" required>
                <div class="valid-feedback">
                    Seems good!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <!-- <input type="file" name="image" id="" multiple> -->
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <input class="form-control" .class="mb-3" type="text" name="campground[image]" id="image" required>
                <div class="valid-feedback">
                    Seems good!
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" .class="mb-3" type="text" name="campground[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    Seems good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" id="price" class="form-control" name="campground[price]" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                </div>
                <div class="valid-feedback">
                    Seems good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <div class="mb-3">
            <a href="/campgrounds">Back to all Campgrounds</a>
        </div>
    </div>
</div>

